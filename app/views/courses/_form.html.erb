<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course_name, style: "display: block" %>
    <%= form.text_field :course_name, pattern:'\b([A-Z]{4}[\s][0-9]{3})\b', title: "[A-Z]{4}[\s][0-9]{3} For example CSCE 606"%>
  </div>

  <div>
    <%= form.label :section, style: "display: block" %>
    <%= form.number_field :section, max: 999, min: 100%>
  </div>

  <div>
  <%= form.label :semester, style: "display: block" %>
  <%= form.text_field  :semester, pattern:'\b((Fall|Spring)[\s]20[0-9]{2})\b', title: "((Fall|Spring)[\s]20[0-9]{2}) For example Fall 2022"%>
  </div>

  <div class="m-2">
    <%= form.submit %>
  </div>
<% end %>

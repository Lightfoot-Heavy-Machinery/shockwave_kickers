<div class="container text-center">
  <p style="color: green"><%= notice %></p>


  <div class="flex-container" style="justify-content:space-evenly;">
    <button class="btn btn-outline-dark m-5"><%= link_to "Edit this course", edit_course_path(@course) %></button>
    <button class="btn btn-outline-dark m-5"><%= link_to "Back to courses", courses_path %></button>
    <%= button_to "Destroy this course", @course, method: :delete %>
  </div>
  <div class="row gx-5">
    <div class="col">
      <div class="row p-5">
        <div class="px-5 py-2 bg-light border rounded-3">
          <h1> <%= @course.course_name %></h1>
        </div>
      </div>
      <div class="row ">
            <div class="px-5 py-2 bg-light border rounded-3">
              <div class="row">
                <h3>View Selection:</h3>
              </div>
              <div class="row">
                <div class="col">
                  Order:
                  <select class="form-select" aria-label="sortOrder">
                    <option selected value="0">Alphabetical</option>
                    <option value="1">Reverse Alphabetical</option>
                    <option value="2">Chronological</option>
                    <option value="3">Reverse Chronological</option>
                  </select>
                </div>
                <div class="col">
                    Semester:
                    <%= select("post", "semester", @semesters, {:include_blank => true}, {:onchange => "alert(this.value)"}) %>
                </div>
                <div class="col">
                    Section:
                    <%= select("post", "section", @sections, {:include_blank => true}, {:onchange => "alert(this.value)"}) %>
                </div>
                <div class="col">
                    Tags:
                    <%= select("post", "tags", @tags, {:include_blank => true}, {:onchange => "alert(this.value)"}) %>

                </div>
              </div>
            </div>
      </div>
      <div class="row p-5">
        <div class="px-5 py-2 bg-light border rounded-3">
          <h4>Current View Statistics:</h4>
            <p>Number of Students: TODO</p>
            <p> Average Memorization Score: TODO</p>
            <p> Highest Memorization: TODO - TODO</p>
            <p> Lowest Memorization: TODO - TODO</p>
        </div>
      </div>
    </div>

    <div class= "col">
      <div class="row">
        <table id="students" class="table table-striped table-hover text-center">
          <thead>
            <tr>
              <th colspan="5">
                <h3>Students in Current View:</h3>
              </th>
            </tr>
            <tr>
              <th>
                Pic
              </th>
              <th>
                Name
              </th>
              <th>
                Section - Semester
              </th>
              <th>
                Tags
              </th>
              <th>
                View Student Profile
              </th>
            </tr>
          </thead>

          <tbody>
            <% @student_records.each do |student| %>
              <tr>
                <td>
                  <%# TODO %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person rounded-circle" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                  </svg>
                </td>
                <td>
                  <%=student.lastname %>, <%=student.firstname %>
                </td>
                <td>
                  (TODO) Section - Semester
                </td>
                <td>
                  <%=student.tags %>
                </td>
                <td>
                  <button class="btn btn-outline-dark"><%= link_to "View profile", student %></button>
                </td>
              </tr>


            <% end %>
          </tbody>
      </div>
    </div>
  </div>
</div>

<div class="container text-center">
  <p style="color: green"><%= notice %></p>


  <div class="flex-container" style="justify-content:space-evenly;">
    <button class="btn btn-outline-dark m-5"><%= link_to "Edit this course", edit_course_path(@course) %></button>
    <button class="btn btn-outline-dark m-5"><%= link_to "Back to courses", courses_path %></button>
    <%= button_to "Destroy this course", @course, method: :delete %>
  </div>
  <div class="row gx-5">
    <div class="col">
      <div class="row p-5">
        <div class="px-5 py-2 bg-light border rounded-3">
          <h1> <%= @course.course_name %></h1>
        </div>
      </div>
      <div class="row ">
            <div class="px-5 py-2 bg-light border rounded-3">
              <div class="row">
                <h3>View Selection:</h3>
              </div>
              <div class="row">
                <div class="col">
                  Order:
                  <select class="form-select" aria-label="sortOrder">
                    <option selected value="0">Alphabetical</option>
                    <option value="1">Reverse Alphabetical</option>
                    <option value="2">Chronological</option>
                    <option value="3">Reverse Chronological</option>
                  </select>
                </div>
                <div class="col">
                    Semester:
                    <% selected_semester = nil%>
                    <%= select("post", "semester", @semesters, {:include_blank => true}, {:onchange => "selected_semester=this.value;"}) %>
                </div>
                <div class="col">
                    Section:
                    <% selected_section = nil%>
                    <%= select("post", "section", @sections, {:include_blank => true}, {:onchange => "selected_section=this.value; render_students"}) %>
                </div>
                <div class="col">
                    Tags:
                    <% selected_tags = nil%>
                    <%= select("post", "tags", @tags, {:include_blank => true}, {:onchange => "selected_tags=this.value; render \"students\", selected_semester: selected_semester, selected_section: selected_section, selected_tags: selected_tags"}) %>
                </div>
              </div>
            </div>
      </div>
      <div class="row p-5">
        <div class="px-5 py-2 bg-light border rounded-3">
          <h4>Current View Statistics:</h4>
            <p>Number of Students: TODO</p>
            <p> Average Memorization Score: TODO</p>
            <p> Highest Memorization: TODO - TODO</p>
            <p> Lowest Memorization: TODO - TODO</p>
        </div>
      </div>
    </div>
    <%#render "students", selected_semester: " Sprint 2021", selected_section: 100, selected_tags: "smart" %>

  </div>
</div>

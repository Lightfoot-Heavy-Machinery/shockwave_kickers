<p style="color: green"><%= notice %></p>

<!--Import the applications.css stylesheet-->
<%= stylesheet_link_tag "application" %>

<h1>Courses</h1>

<div id="courses">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr>
        <th colspan="5">
          <h1>Courses</h1>
        </th>
      </tr>
      <tr>
        <th>
          Course Name:
        </th>
        <th>
          Section(s):
        </th>
        <th>
          Professor(s):
        </th>
        <th>
          Semester(s):
        </th>
        <th>
          View Course Profile:
        </th>
      </tr>
    </thead>

    <tbody>
    
      <% @courses.each do |course| %>
          <%= render course %>
      <% end %>
    </tbody>
  </table>
</div>

<footer class="hd footer mt-auto py-3 mt-2 text-center">
  <div class="container">
    <span><button class="btn btn-light"><%= link_to "New course", new_course_path %></button></span>
  </div>
</footer>
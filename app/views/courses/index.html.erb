

<div id="coursesDiv">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr>
        <th colspan="5">
          <h1>Courses</h1>
        </th>
      </tr>
      <tr>
        <th>
          Course Name: <br>
          <%= form_tag('/courses', method: :get) do %>
            <%= text_field_tag :search_course, params[:search_course], placeholder: "Search by Name" %>
            <%= submit_tag 'Search Name', :name => nil %>
          <% end %>
        </th>
        <th>
          Semester(s): <br>
          <%= form_tag('/courses', method: :get) do %>
            <%= text_field_tag :search_semester, params[:search_semester], placeholder: "Search by Semester" %>
            <%= submit_tag 'Search Semester', :name => nil %>
          <% end %>
        </th>
        <th>
          View Course Profile: <br>
          <%= form_tag('/courses', method: :get) do %>
            <%= text_field_tag :search_student, params[:search_student], placeholder: "Search by Student" %>
            <%= submit_tag 'Search Student', :name => nil %>
          <% end %>
        </th>
      </tr>
    </thead>

    <tbody>
        <%= render partial: 'courses/partials/course' %>
    </tbody>
  </table>
</div>

<footer class="hd footer mt-auto py-3 mt-2 text-center">
  <div class="container">
    <%= button_to "New course", new_course_path, :method=>:get  %>
  </div>
</footer>


<div id="coursesDiv">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr>
        <th colspan="5">
          <h1>Courses</h1>
        </th>
      </tr>
      <tr>
        <th>
          Course Name: <br>
          <%= form_tag('/courses', method: :get) do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search by Name" %>
            <%= submit_tag 'Search', :name => nil %>
          <% end %>
        </th>
        <th>
          Semester(s): <br><br>
        </th>
        <th>
          View Course Profile: <br><br>
        </th>
      </tr>
    </thead>

    <tbody>
        <%= render partial: 'courses/partials/course' %>
    </tbody>
  </table>
</div>

<footer class="hd footer mt-auto py-3 mt-2 text-center">
  <div class="container">
    <%= button_to "New course", new_course_path, :method=>:get  %>
  </div>
</footer>
<%= form_with(model: @post) do |form| %>
  <div>
    <div style = "text-align: center">
      <strong class = "message">Fill out form, drag and drop, then Save</strong><br><br>
      <!--if the file uploaded, send message-->
      <% if @post %>
        <p style="color: green"><%= notice %>File Uploaded</p>
      <% end %>

      <!--make an empty text field for Course Code-->
      <%= form.label :course_temp, "Course Code", class: "message" %><br>
      <%= form.text_field :course_temp, pattern: '(\b[A-Za-z]{3,4}\b)', placeholder: "CSCE 000", title: "Course Code incorrect" %><br>

      <!--make an empty text field for Section number-->
      <%= form.label :section_temp, "Section Number", class: "message"%><br>
      <%= form.text_field :section_temp, pattern: '(\b[0-9]{3}\b)', placeholder: "000" , title: "Section value incorrect"%><br>

      <!--make an empty text field for Semester-->
      <%= form.label :semester_temp, "Semester", class: "message" %><br>
      <%= form.text_field :semester_temp, pattern: '(\bFall.+[0-9]{4}|Spring.+[0-9]{4}\b)', placeholder: "Fall/Spring 0000", title: "Semester values incorrect" %><br>

      <!--implement dropzone for submitting zip or p_imageRoster.zip files-->
        <%= form.file_field :file, accept: '.zip', multiple: false, class: "dropzone" %>
    </div>

    <div style= "text-align: center"><br><br>
    <!--on submit, send user back to index page-->
      <%= form.submit "Save", class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
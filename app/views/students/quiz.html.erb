<div class="container text-center">
<h1> Take Quiz for <%= @student.firstname%> <%= @student.lastname%> </h1>

<div class="container text-center">
<% if @correctAnswer.nil?%>
<% elsif @correctAnswer == true%>
<p style="color: green">Correct Answer!</p>
<% else %>
<p style="color: red">Incorrect Answer. The correct answer was <%= @student.firstname%> <%= @student.lastname%> </p>
<% end %>
</div>
<div class="row gx-5">
      <div class="col">
        <div class="row">
          <% if @student.image.attached? %>
              <%= image_tag @student.image.variant(:thumb) %>
          <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="currentColor" class="bi bi-person rounded-circle" viewBox="0 0 16 16">
                      <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
              </svg>
          <% end %>
        </div>
      </div>
      <div class="col">
        <% if @correctAnswer.nil?%>
          <div class="bg-light border rounded-3">
              <form action = <%="/students/"+@student.id.to_s + "/quiz" %>>
              <% @choices.each do |choice| %>
                  <% name = Student.where(id:choice,teacher: current_user.email).pick(:firstname, :lastname) %>
                  <% name = name[0] + " " + name[1] %>
                  <br>
                  <input type="radio" name="answer" value=<%= choice %>><%= name%>
                  <br>
              <% end %>
                  <br>
                  <input type="submit"/>
                  </form>
          </div>
        <% end %>
      </div>
    </div>
  <% if !@correctAnswer.nil?%>
  <div class="container">
  <%= button_to "Next Student", getDueStudentQuiz() , :method=>:get  %>
  </div>
  <% end %>
</div>
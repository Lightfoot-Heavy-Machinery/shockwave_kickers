<div id="studentsDiv">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr>
        <th colspan="6">
          <h1>Students</h1>
        </th>
      </tr>
      <tr>
        <th>
          Image:
        </th>
        <th>
          Name:
        </th>
        <th>
          Email:
        </th>
        <th>
          Course(s)/Semester(s):
          <%= form_with do |f| %>
          <% selected_course = nil%>
          <%= f.select("selected_course", @course_names, {:include_blank => true}, {:onchange => "selected_course=this.value;"}) %>

          <% selected_semester = nil%>
          <%= f.select("selected_semester", @semesters, {:include_blank => true}, {:onchange => "selected_semester=this.value;"}) %>
        </th>
        <th>
          Tags:
          <% selected_tag = nil%>
          <%= f.select("selected_tag", @tags, {:include_blank => true}, {:onchange => "selected_tag=this.value;"}) %>
        </th>
        <div>
        <%= f.submit "Filter Students List"%>
        <% end %>
        </div>
        <th>
          View Student Profile:
        </th>
      </tr>
    </thead>

    <tbody id="students">
      <% @students.each do |student| %>
        <tr>
          <td>
            <% if student.image.attached? %>
                <%= image_tag student.image.variant(:thumb), class: 'bi bi-person rounded-circle d-block mx-auto', style: 'max-width: 4rem;' %>
            <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person rounded-circle" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                </svg>
            <% end %>
          </td>
          <td>
            <%= student.lastname %>, <%= student.firstname %>
          </td>
          <td>
            <%= student.email %>
          </td>
          <td>
            <%= @courses_taken[student.course_id] %> <%= @semesters_taken[student.course_id] %>
          </td>
          <td>
            <%= student.tags %>
          </td>
          <td>
            <%= button_to "Show this student", student, :method => :get %>
          </td>
        </tr>
      <% end %>
    </div>
    </tbody>
  </table>
</div>

<footer class="hd footer mt-auto py-3 mt-2 text-center">
  <div class="container">
    <span><%= button_to "New student", new_student_path, :method => :get %></span>
  </div>
</footer>
